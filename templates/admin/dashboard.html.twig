{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Tableau de bord{% endblock %}
{% block page_actions %}
    <a class="btn btn-primary" href="...">Some Action</a>
{% endblock %}

{% block main %}
    <table class="datagrid">
        <thead>
            <tr>
                <td>Produits vendus</td>
                <td>Montant des ventes</td>
            </tr>
        </thead>
        <tbody>
        {{ render_chart(chart) }}
        {# {% if addFlash() == true %} #}
            {% for item in produits %}
                <tr>
                    <td>
                    {{ item.nom }}  <img src="{{ asset('asset/images/produits') }}/{{ item.image }}" alt="{{ item.nom }}" style="width: 10%; height: 10%;">
                    </td>
                
            {% endfor %}
        {# {% endif %} #}
        
            {% for data in paiement %}
                
                    <td>{{ data.montant }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}